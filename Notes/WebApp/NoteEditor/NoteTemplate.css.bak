.notepad ul {
    color: #333;
    font: italic 16px/24px serif;
    line-height: 24px;
    -webkit-column-count: 2;
       -moz-column-count: 2;
            column-count: 2;
}
#topRightLines {
    font: 16px/24px serif;
}
#titleContainer {
    min-height: 24px;
    margin-top: 24px;
    margin-bottom: 24px;
    padding: 0;
}
#titlePlaceholder {
    color: #ccc;
    position: absolute;
    margin-top: 0;

    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}
#title {
    margin-top: 16px;
}
#optionsContainer {
    text-align: left;
    color: #999;
    -webkit-column-count: 2;
       -moz-column-count: 2;
            column-count: 2;
    padding:0; 
}
#optionsContainer select {
    background: #e6e6e6;
    color: #666;
    width: 150px;
    font: inherit;
}
#optionsContainer li {
    height: 24px;
    font-size: 16px;
    line-height: 24px;
}
#optionsContainer li:nth-child(2n) {
    text-align: right;
}
br {
    height: 24px;
}
#simple_sketch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
/*    background-color: red;
    opacity: 0.5;*/
}
#contentContainer {
    margin: 0px 24px 24px 84px;
    padding-top: 24px;
}
